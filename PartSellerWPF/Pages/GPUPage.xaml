<Page x:Class="PartSellerWPF.Pages.GPUPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GPUPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="1"
                  Style="{StaticResource DataGridStyle}"
                  RowEditEnding="dataGrid_RowEditEnding"
                  PreviewKeyDown="dataGrid_PreviewKeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Вольтаж" Binding="{Binding Voltage, StringFormat={}{0} Ватт, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Видеопамять" Binding="{Binding VideoMemory, StringFormat={}{0} Мб, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Частота ядра" Binding="{Binding CoreFreq, StringFormat={}{0} МГц, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Частота &#13;видеопамяти" 
                               Binding="{Binding MemoryFreq, StringFormat={}{0} МГц, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Ширина" 
                               Binding="{Binding Width, StringFormat={}{0} мм., UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Высота"
                                Binding="{Binding Height, StringFormat={}{0} мм., UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Длина" 
                               Binding="{Binding Length, StringFormat={}{0} мм., UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Цена"
                    Binding="{Binding Price, StringFormat={}{0} руб., UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTemplateColumn Header="Изображение" Width="3*" x:Name="imageTemplate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}" 
                                Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Изображение" Width="3*" x:Name="imageLinkColumn" Binding="{Binding Image, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="На складе" Width="3*" x:Name="quantityInStockColumn" Binding="{Binding QuantityInStock, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="ID" Width="3*" x:Name="partIdColumn" Binding="{Binding PartID, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnAdd" Grid.Row="1" Margin="100,10" Content="Добавить в корзину" Style="{StaticResource RoundedButton}" Click="btnAdd_Click"/>
    </Grid>
</Page>
