<Page x:Class="PartSellerWPF.Pages.GPUPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GPUPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0" 
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              Margin="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand.Name}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Вольтаж" Binding="{Binding Voltage}" Width="*"/>
                <DataGridTextColumn Header="Видеопамять" Binding="{Binding VideoMemoryGB}" Width="*"/>
                <DataGridTextColumn Header="Частота ядра" Binding="{Binding CoreFrequencyMHz}" Width="*"/>
                <DataGridTextColumn Header="Частота &#13;видеопамяти" 
                               Binding="{Binding MemoryFrequencyMHz}" Width="*"/>
                <DataGridTextColumn Header="Ширина" 
                               Binding="{Binding Width}" Width="*"/>
                <DataGridTextColumn Header="Высота"
                                Binding="{Binding Height}" Width="*"/>
                <DataGridTextColumn Header="Длина" 
                               Binding="{Binding Length}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
