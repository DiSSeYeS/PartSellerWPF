<Page x:Class="PartSellerWPF.Pages.CasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CasePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0" 
                  CanUserDeleteRows="False"
                  Margin="1"
                  Style="{StaticResource DataGridStyle}"
                  RowEditEnding="dataGrid_RowEditEnding"
                  PreviewKeyDown="dataGrid_PreviewKeyDown"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Ширина" Binding="{Binding Width, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Длина" Binding="{Binding Length, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Макс.длина &#13;блока &#13;питания" 
                                   Binding="{Binding MaxSupplyLength, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Макс.&#13;длина &#13;видеокарты" 
                                   Binding="{Binding MaxGPULength, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Макс.&#13;высота &#13;башни"
                                    Binding="{Binding MaxCoolerHeight, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Форм-&#13;фактор" 
                                   Binding="{Binding FormFactor, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Price}" Width="*"/>
                <DataGridTemplateColumn Header="Изображение" Width="3*" x:Name="imageTemplate">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}" 
                                Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Изображение" Width="3*" x:Name="imageLinkColumn" Binding="{Binding Image, UpdateSourceTrigger=PropertyChanged}"/>

            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnAdd" Grid.Row="1" Margin="100,10" Content="Добавить в корзину" Style="{StaticResource RoundedButton}" Click="btnAdd_Click"/>
    </Grid>
</Page>
