<Page x:Class="PartSellerWPF.Pages.CasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CasePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand.Name}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Высота" Binding="{Binding Height}" Width="*"/>
                <DataGridTextColumn Header="Ширина" Binding="{Binding Width}" Width="*"/>
                <DataGridTextColumn Header="Длина" Binding="{Binding Length}" Width="*"/>
                <DataGridTextColumn Header="Макс.длина &#13;блока питания" 
                                   Binding="{Binding SupplyLength}" Width="*"/>
                <DataGridTextColumn Header="Макс.длина &#13;видеокарты" 
                                   Binding="{Binding GPULength}" Width="*"/>
                <DataGridTextColumn Header="Макс.высота &#13;башни"
                                    Binding="{Binding CoolerLength}" Width="*"/>
                <DataGridTextColumn Header="Форм-фактор" 
                                   Binding="{Binding FormFactor.Type}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
