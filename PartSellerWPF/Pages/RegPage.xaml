<Page x:Class="PartSellerWPF.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Width="350"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Padding="30">
            <StackPanel>
                    <TextBlock Text="Регистрация"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                    <TextBlock Text="Имя:" Margin="0,5"/>
                    <TextBox x:Name="NameTextBox" 
                     Height="30"
                     Padding="5"
                     Margin="0,0,0,15"/>

                    <TextBlock Text="Фамилия:" Margin="0,5"/>
                    <TextBox x:Name="LastNameTextBox" 
                     Height="30"
                     Padding="5"
                     Margin="0,0,0,15"/>

                    <TextBlock Text="Эл. Почта:" Margin="0,5"/>
                    <TextBox x:Name="LoginTextBox" 
                     Height="30"
                     Padding="5"
                     Margin="0,0,0,15"/>

                    <TextBlock Text="Пароль:" Margin="0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,20"/>

                    <TextBlock Text="Подтвердите пароль:" Margin="0,5"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                         Height="30"
                         Padding="5"
                         Margin="0,0,0,20"/>

                    <Button Content="Регистрация"
                    Height="50"
                    Click="RegButton_Click"
                    Style="{StaticResource RoundedButton}"/>

                    <TextBlock x:Name="ErrorTextBlock"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
                </StackPanel>
        </Border>
        </ScrollViewer>
    </Grid>
</Page>
