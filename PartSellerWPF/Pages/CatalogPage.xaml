<Page x:Class="PartSellerWPF.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatalogPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCPU" Grid.Row="0" Grid.Column="0" Margin="10" Style="{StaticResource RoundedButton}" Content="Процессоры" Click="btnCPU_Click"/>
        <Button x:Name="btnGPU" Grid.Row="1" Grid.Column="0" Margin="10" Style="{StaticResource RoundedButton}" Content="Видеокарты" Click="btnGPU_Click"/>
        <Button x:Name="btnRAM" Grid.Row="2" Grid.Column="0" Margin="10" Style="{StaticResource RoundedButton}" Content="Оперативная память" Click="btnRAM_Click"/>
        <Button x:Name="btnMotherboard" Grid.Row="3" Grid.Column="0" Margin="10" Style="{StaticResource RoundedButton}" Content="Материнские платы" Click="btnMotherboard_Click"/>
        <Button x:Name="btnSupply" Grid.Row="0" Grid.Column="1" Margin="10" Style="{StaticResource RoundedButton}" Content="Блоки питания" Click="btnSupply_Click"/>
        <Button x:Name="btnCase" Grid.Row="1" Grid.Column="1" Margin="10" Style="{StaticResource RoundedButton}" Content="Корпусы" Click="btnCase_Click"/>
        <Button x:Name="btnDisk" Grid.Row="2" Grid.Column="1" Margin="10" Style="{StaticResource RoundedButton}" Content="Накопители" Click="btnDisk_Click"/>
        <Button x:Name="btnCooling" Grid.Row="4" Grid.Column="1" Margin="10" Style="{StaticResource RoundedButton}" Content="Охлаждение" Click="btnCooling_Click"/>
    </Grid>
</Page>
