<Page x:Class="PartSellerWPF.Pages.CPUPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CPUPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0" 
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              Margin="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Бренд" Binding="{Binding Brand}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" Width="*"/>
                <DataGridTextColumn Header="Вольтаж" Binding="{Binding Voltage}" Width="*"/>
                <DataGridTextColumn Header="Сокет" Binding="{Binding Socket}" Width="*"/>
                <DataGridTextColumn Header="Частота" Binding="{Binding FrequencyGHz}" Width="*"/>
                <DataGridTextColumn Header="Ядра" Binding="{Binding Cores}" Width="*"/>
                <DataGridTextColumn Header="Потоки" Binding="{Binding Threads}" Width="*"/>
                <DataGridTextColumn Header="Кэш L1" Binding="{Binding L1}" Width="*"/>
                <DataGridTextColumn Header="Кэш L2" Binding="{Binding L2}" Width="*"/>
                <DataGridTextColumn Header="Турбо-буст" Binding="{Binding HasTurboBoost}" Width="*"/>
                <DataGridTextColumn Header="Макс.частота" Binding="{Binding MaxFrequency}" Width="*"/>
                <DataGridTextColumn Header="Цена"
                    Binding="{Binding Price}" Width="*"/>
                <DataGridTemplateColumn Header="Изображение" Width="3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Image}" 
                                Stretch="Uniform"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
