<Page x:Class="PartSellerWPF.EmployeePages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartSellerWPF.EmployeePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <DataGrid Name="dataGrid" Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="1"
                  Style="{StaticResource DataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер заказа" Binding="{Binding OrderId}" Width="*"/>
                <DataGridTextColumn Header="К оплате" Binding="{Binding Amount}" Width="*"/>
                <DataGridTextColumn Header="Статус оплаты" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Статус заказа" Binding="{Binding OrderStatus}" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Margin="205,10,405,10" Style="{StaticResource RoundedButton}" Content="Отменить" Click="ButtonCancel_Click"/>
        <Button Grid.Row="1" Margin="10,10,605,10" Style="{StaticResource RoundedButton}" Content="Подтвердить" Click="ButtonConfirm_Click"/>
        <Button Grid.Row="1" Margin="405,10,205,10" Style="{StaticResource RoundedButton}" Content="Доставка" Click="ButtonDelivery_Click"/>
        <Button Grid.Row="1" Margin="605,10,10,10" Style="{StaticResource RoundedButton}" Content="Получен" Click="ButtonGet_Click"/>
    </Grid>
</Page>
